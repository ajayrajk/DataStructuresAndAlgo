<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <android.support.v4.widget.NestedScrollView
        android:layout_margin="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnFibonacci"
                android:layout_width="match_parent"
                android:text="Fibonacci Serries"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnBinarySearch"
                android:layout_width="match_parent"
                android:text="Binary Search"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnBubbleSort"
                android:layout_width="match_parent"
                android:text="Bubble Sorting"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnInsertionSot"
                android:layout_width="match_parent"
                android:text="Insertion Sorting"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnMergeSort"
                android:layout_width="match_parent"
                android:text="Merge Sorting"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnLongestPalindrome"
                android:layout_width="match_parent"
                android:text="Longest Palindrome"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnReverseWord"
                android:layout_width="match_parent"
                android:text="Reverse Word"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSingleList"
                android:layout_width="match_parent"
                android:text="Single LinkedList"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnDoubleList"
                android:layout_width="match_parent"
                android:text="Double LinkedList"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnCircularList"
                android:layout_width="match_parent"
                android:text="Circular LinkedList"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>